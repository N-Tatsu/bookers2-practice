<h2>User info</h2>
<%= render 'users/info', user: current_user %>>

<h2>New book</h2>
<%= form_with model:@book do |f| %>
<%= f.text_field :title %><br>
<%= f.text_area :body %><br>
<%= f.submit 'Create Book' %>
<% end %>


<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
