<h2>User info</h2>
<table>
  <tbody>
      <tr>
          <td><%= image_tag current_user.get_profile_image(100,100) %></td>
      </tr>
      <tr>
          <td>name</td>
          <td><%= current_user.name %></td>
      </tr>
      <tr>
          <td>introduction</td>
          <td><%= current_user.introduction %></td>
      </tr>

  </tbody>

</table>

<div>
    <%= link_to edit_user_path(current_user) do %>
        <i class="fas fa-user-cog"></i>
    <% end %>
</div>

<h2>New book</h2>
<%= form_with model:@book do |f| %>
<%= f.text_field :title %><br>
<%= f.text_area :body %><br>
<%= f.submit 'Create Book' %>
<% end %>


<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>