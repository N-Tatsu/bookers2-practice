<h2>User info</h2>
<table>
  <tbody>
      <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %></td>
      </tr>
      <tr>
          <td>name</td>
          <td><%= @user.name %></td>
      </tr>
      <tr>
          <td>introduction</td>
          <td><%= @user.introduction %></td>
      </tr>

  </tbody>

</table>




<h2>New book</h2>
<%= form_with model:@book do |f| %>
<%= f.text_field :title %><br>
<%= f.text_area :body %><br>
<%= f.submit 'Create Book' %>
<% end %>




