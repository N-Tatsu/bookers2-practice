<h2>user </h2>




<h2>New book</h2>
<%= form_with model:@book do |f| %>
<%= f.text_field :title %><br>
<%= f.text_area :body %><br>
<%= f.submit 'Create Book' %>
<% end %>


<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag @user.get_profile_image(100,100) %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>





